{
  "name": "organicfreshcoffee-game-server",
  "version": "1.0.0",
  "description": "Express TypeScript WebSocket server for multiplayer game with Firebase auth and MongoDB",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    
    "migrate:up": "migrate-mongo up",
    "migrate:down": "migrate-mongo down",
    "migrate:status": "migrate-mongo status",
    "migrate:create": "migrate-mongo create",
    
    "scripts:regenerate-dungeon": "npx ts-node scripts/regenerate-dungeon.ts",
    "scripts:delete-dungeon": "npx ts-node scripts/delete-dungeon.ts",
    "scripts:test-dungeon": "npx ts-node scripts/test-dungeon.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "migrate-mongo": "^12.1.3",
    "mongodb": "^6.3.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "express",
    "typescript",
    "websocket",
    "mongodb",
    "firebase",
    "multiplayer",
    "game"
  ],
  "author": "Organic Fresh Coffee",
  "license": "MIT"
}
